<header>
    <div class="main-content d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center header-right-cont">
            <div class="logo"><h1>Library</h1></div>
            <div class="top-menu">
                <div class="btn-group" role="group">
                    <a class="btn btn-outline-primary" href="{{ path('app_home') }}">Home</a>
                    <a class="btn btn-outline-primary" href="{{ path('library') }}">Library</a>
                    <a class="btn btn-outline-primary" href="{{ path('author') }}">Authors</a>
                </div>
            </div>
        </div>
        <div class="user-account">
            <div class="btn-group" role="group">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a class="btn btn-danger" href="{{ path('app_logout') }}">Logout</a>
                {% else %}
                    <a class="btn btn-primary" href="{{ path('app_login') }}">Login</a>
                    <a class="btn btn-primary" href="{{ path('app_register') }}">Register</a>
                {% endif %}
            </div>
        </div>
    </div>
</header>